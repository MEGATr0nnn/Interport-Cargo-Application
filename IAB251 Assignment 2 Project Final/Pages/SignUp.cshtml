@page
@model IAB251_Assignment_2_Project_Final.Pages.SignUp
@{
    ViewData["Title"] = "Register Details";
}


<h1 style="text-align: center">
    Register Details
</h1>


<form method="post">
    <div>
        <label for="inputFirst">Enter First Name:</label>
        <input type="text" asp-for="Customer.first_Name" class="form-control" />
    </div>

    <div>
        <label for="inputFirst">Enter Last Name:</label>
        <input type="text" asp-for="Customer.last_Name" class="form-control" />
    </div>

    <div>
        <label for="inputFirst">Enter Email Address:</label>
        <input type="text" asp-for="Customer.email" class="form-control" />
    </div>

    <div>
        <label for="inputFirst">Enter Phone Number:</label>
        <input type="text" asp-for="Customer.phoneNumber" class="form-control" />
    </div>

    <div>
        <label for="inputFirst">Enter Password:</label>
        <input type="text" asp-for="Customer.password" class="form-control" />
    </div>


    <button type="submit">Submit</button>

</form>

@if (!string.IsNullOrEmpty(Model.accountExists))
{
    <p>@Model.accountExists</p>
}