@page
@model lIndexModel
@{
    ViewData["Title"] = "Home page";
    ViewData["ShowNavbar"] = false; // Set this to hide the navbar
}

<div class="pill-box">

<h1 style="text-align: center">
    Welcome to Interport Cargo Services
</h1>

<br />

<h4 style="text-align: center">
    Registration
</h4>

<br />

<form method="post">
<div style="text-align: center">
        <button type="submit" name="action" value="customer" class="btn btn-primary">Customer</button>
        <button type="submit" name="action" value="employee" class="btn btn-secondary">Employee</button>
</div>
</form>


</div>

<br />

<form method="post">
    <label for="userType">User Type</label>
    <select id="userType" name="userType" class="form-select" onchange="handleUserTypeChange(this.value)">
        @foreach (var item in Model.UserType)
        {
            <option value="@item">@item</option>
        }
    </select>
</form>


<div asp-validation-summary="ModelOnly" class="text-danger"></div>

<div id="showCustomer" style="display: none">
    <div class="pill-box">
        <h4 style="text-align:center">
            Existing Customer
        </h4>
        <form method="post">
            <div>
                <label for="inputFirst" style="text-align: center">Enter Username:</label>
                <input type="text" asp-for="email" class="form-control" />
                <span asp-validation-for="email" class="text-danger"></span>

            </div>

            <div>
                <label for="inputFirst" style="text-align: center">Enter Password:</label>
                <input type="text" asp-for="password" class="form-control" />
                <span asp-validation-for="password" class="text-danger"></span>

            </div>
            <br />
            <div style="text-align: center">
                <button type="submit" name="action" value="signin" class="btn btn-primary">Sign In</button>
            </div>
        </form>
    </div>
</div>

<div id="showEmployee" style="display: none">
    <div class="pill-box">
        <h4 style="text-align:center">
            Existing Employee
        </h4>
        <form method="post">
            <div>
                <label for="inputFirst" style="text-align: center">Enter Username:</label>
                <input type="text" asp-for="email" class="form-control" />
                <span asp-validation-for="email" class="text-danger"></span>

            </div>

            <div>
                <label for="inputFirst" style="text-align: center">Enter Password:</label>
                <input type="text" asp-for="password" class="form-control" />
                <span asp-validation-for="password" class="text-danger"></span>

            </div>
            <br />
            <div style="text-align: center">
                <button type="submit" name="action" value="signinEmployee" class="btn btn-primary">Sign In</button>
            </div>
        </form>
    </div>
</div>


<script>

    function handleUserTypeChange(selectedValue)
    {
        document.getElementById("showCustomer").style.display = "none";
        document.getElementById("showEmployee").style.display = "none";

        if (selectedValue == "Customer") {
            document.getElementById("showCustomer").style.display = "block";
        }

        else if (selectedValue == "Employee") {
            document.getElementById("showEmployee").style.display = "block";
        }

        else {
            alert("Please Select a Valid User.");
        }
    }
</script>

