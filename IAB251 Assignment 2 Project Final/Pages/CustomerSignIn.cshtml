@page
@model IAB251_Assignment_2_Project_Final.Pages.CustomerSignInModel
@{
    ViewData["ShowNavbar"] = false;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Customer Sign In</title>


</head>
<body>
    <div class="header-container">
        <form method="post">
            <button type="submit" value="Back" name="Back" class="btn btn-secondary">Back</button>
        </form>

    </div>

    <div class="hero-image3">
        <div class="header-container">
            <form method="post" asp-page-handler="Back">
                <button type="submit" class="btn btn-secondary">Back</button>
            </form>
        </div>

        <div class="center-container">
            <!-- Customer Sign In Form -->
            <div class="signin-form-container">
                <h1>Customer Sign In</h1>
                <form method="post">
                    <input type="email" name="email" placeholder="Customer Email" required>
                    <input type="password" name="password" placeholder="Password" required>
                    @if (Model.SignIn == false)
                    {
                        <p style="color:red;"> The details you have entered are incorrect!</p>
                    }
                    <button type="submit" name="action" value="signin">Sign In</button>
                </form>
            </div>
            </div>

</body>
</html>

