}

<h1 style="text-align: center">
    Welcome to Your Quotation Management Dashboard
</h1>

<div>
    <table class="table">
            <thead>
                <tr>
                    <th>Customer ID</th>
                    <th>Customer Information</th>
                    <th>Source</th>
                    <th>Destination</th>
                    <th>Number of Containers</th>
                    <th>Nature of Package</th>
                    <th>Import/Export</th>
                    <th>Packing</th>
                    <th>Quarantine Requirements</th>
                    <th>Status</th>
                    <th>Total Cost</th>
                    <th>Accept</th>
                    <th>Reject</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var quote in Model.allQuotations)
                {
                    <tr>
                        <td>@quote.getCustomerId();</td>
                        <td>@quote.getCustomerInformation();</td>
                        <td>@quote.getSource();</td>
                        <td>@quote.getDestination();</td>
                        <td>@quote.getNumOfContainers();</td>
                        <td>@quote.getNatureOfPackage();</td>
                        <td>@quote.getImport();</td>
                        <td>@quote.getPacking();</td>
                        <td>@quote.getQuarantineRequirements();</td>
                        <td>STATUS (DONE BY HARRY)</td>
                        <td>TOTAL COST (DONE BY HARRY)</td>
                        <td><button value="accept">Accept</button></td>
                        <td><button value="reject">Reject</button></td>
                    </tr>
                }
            </tbody>
     </table>
</div>

