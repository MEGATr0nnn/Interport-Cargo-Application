@page
@model IAB251_Assignment_2_Project_Final.Pages.SignUpEmployeeModel
@{
    ViewData["Title"] = "Register Details Employee";

}


<h1 style="text-align: center" class="pill-box">
    Register Details - Employee
</h1>

<div class="pill-box">
    <form method="post">
        <div>
            <label for="inputFirst">Enter First Name:</label>
            <input type="text" asp-for="firstNameEmployee" class="form-control" />
        </div>


        <div>
            <label for="inputFirst">Enter Last Name:</label>
            <input type="text" asp-for="lastNameEmployee" class="form-control" />
        </div>


        <div>
            <label for="inputFirst">Enter Email Address:</label>
            <input type="text" asp-for="emailEmployee" class="form-control" />
        </div>


        <div>
            <label for="inputFirst">Enter Phone Number:</label>
            <input type="text" asp-for="phoneNumberEmployee" class="form-control" />
        </div>


        <div>
            <label for="inputFirst">Select Employee Type:</label>
            <input type="text" asp-for="employeeType" class="form-control" />
        </div>


        <div>
            <label for="inputFirst">Enter Address:</label>
            <input type="text" asp-for="addressEmployee" class="form-control" />
        </div>


        <div>
            <label for="inputFirst">Enter Password:</label>
            <input type="text" asp-for="passwordEmployee" class="form-control" />
        </div>

        <br />

        <div style="text-align: center">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>

    </form>
</div>
